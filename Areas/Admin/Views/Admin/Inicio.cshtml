﻿
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Areas/Admin/Views/Shared/_Panel.cshtml";
}
<h2>Panel de Inicio</h2>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <a href="@Url.Action("Ventas", "Admin", new { area = "Admin" })" style="text-decoration: none;">
            <div class="card border-left-primary shadow h-100 py-2" style="cursor: pointer;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total de Ventas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalVenta">
                                @ViewBag.TotalVentas
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-basket2-fill bi-lg text-secondary" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>



    <!-- Total de Productos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <a href="@Url.Action("Productos", "Admin", new { area = "Admin" })" style="text-decoration: none;">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total de Productos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalProductos">@ViewBag.TotalProductos</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clipboard-data-fill text-secondary bi-lg " style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Total de Categorias -->
    <div class="col-xl-3 col-md-6 mb-4">
        <a href="@Url.Action("Categorias", "Admin", new { area = "Admin" })" style="text-decoration: none;">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Total de Categorias
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalCategorias">@ViewBag.TotalCategorias</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-tags bi-lg text-secondary bi-lg" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Total de Ingresos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <a href="@Url.Action("Pedidos", "Admin", new { area = "Admin" })" style="text-decoration: none;">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total de Pedidos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalIngresos">@ViewBag.TotalPedidos</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-cart3 bi-lg text-secondary bi-lg" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<style>
    a:hover .card {
        background-color: #f8f9fa; /* Cambia el color de fondo en hover */
        box-shadow: 0 0 15px rgba(0, 0, 0, 1.8); /* Añade una sombra */
    }
</style>
