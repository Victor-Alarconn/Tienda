@{
    ViewBag.Title = "Gestión de Imágenes";
    Layout = "~/Areas/Admin/Views/Shared/_Panel.cshtml";

    // Inicializar ViewBag.Images si es null
    var images = ViewBag.Images as List<string> ?? new List<string>();
}

<div class="container-fluid">
    <!-- Gestión de Imágenes del Carrusel -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-dark">Gestión de Imágenes Tienda Virtual - Carrusel</h6>
        </div>
        <div class="card-body">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <form action="@Url.Action("UploadImages", "GestionPagina", new { area = "Admin" })" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Seleccionar Imagen - Carrusel</label>
                    <input type="file" name="file" id="file" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Subir Imagen</button>
            </form>

            <hr />

            <h6 class="m-0 font-weight-bold text-dark">Imágenes Subidas</h6>
            <div class="row">
                @foreach (var image in images)
                {
                    <div class="col-md-3">
                        <div class="card mb-4">
                            <img src="@Url.Content("~/Imagenes/Carousel/" + image)" class="card-img-top" alt="Imagen" />
                            <div class="card-body">
                                <form action="@Url.Action("DeleteImage", "GestionPagina", new { area = "Admin" })" method="post">
                                    <input type="hidden" name="fileName" value="@image" />
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Gestión de Imagen del Logo -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-dark">Gestión de Imagen del Logo</h6>
        </div>
        <div class="card-body">
            <form action="@Url.Action("UploadLogo", "GestionPagina", new { area = "Admin" })" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="logo">Seleccionar Imagen - Logo</label>
                    <input type="file" name="file" id="logo" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Subir Logo</button>
            </form>

            <hr />

            <h6 class="m-0 font-weight-bold text-dark">Logo Actual</h6>
            @if (ViewBag.Logo != null)
            {
                <div class="card mb-4">
                    <!-- Imagen del logo con ajuste de tamaño -->
                    <img src="@Url.Content("~/Imagenes/Logo/" + ViewBag.Logo)" class="card-img-top img-fluid" alt="Logo" style="max-width: 150px; max-height: 150px; margin: 0 auto; display: block;" />
                    <div class="card-body">
                        <form action="@Url.Action("DeleteLogo", "GestionPagina", new { area = "Admin" })" method="post">
                            <button type="submit" class="btn btn-danger">Eliminar Logo</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">No hay un logo cargado actualmente.</div>
            }
        </div>
    </div>

    <!-- Gestión de Imagen de Publicidad -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-dark">Gestión de Imagen de Publicidad</h6>
        </div>
        <div class="card-body">
            <form action="@Url.Action("UploadPublicidad", "GestionPagina", new { area = "Admin" })" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="publicidad">Seleccionar Imagen - Publicidad</label>
                    <input type="file" name="file" id="publicidad" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Subir Publicidad</button>
            </form>

            <hr />

            <h6 class="m-0 font-weight-bold text-dark">Imagen de Publicidad Actual</h6>
            @if (ViewBag.Publicidad != null)
            {
                <div class="card mb-4">
                    <!-- Imagen de publicidad con ajuste de tamaño -->
                    <img src="@Url.Content("~/Imagenes/Publicidad/" + ViewBag.Publicidad)" class="card-img-top img-fluid" alt="Publicidad" style="max-width: 150px; max-height: 150px; margin: 0 auto; display: block;" />
                    <div class="card-body">
                        <form action="@Url.Action("DeletePublicidad", "GestionPagina", new { area = "Admin" })" method="post">
                            <button type="submit" class="btn btn-danger">Eliminar Publicidad</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">No hay una imagen de publicidad cargada actualmente.</div>
            }
        </div>
    </div>
</div>
